# -*- coding: utf-8 -*-
#:import hex kivy.utils.get_color_from_hex

<Label>:
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
    font_size: '20sp'
    font_name: 'MontserratMedium.ttf'

<About>:

    canvas.before:
        Color:
            rgb: hex('#0088b7')
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:

        GridLayout:
            padding: 10
            cols:1
            spacing: 10
            size_hint: 1, None
            height: self.minimum_height

            Label:
                text: str(root.text_cabecalho)
            Label:
                text: str(root.text_funciona)
            Label:
                text: str(root.text_quiz)
            Label:
                text: str(root.text_quem)

