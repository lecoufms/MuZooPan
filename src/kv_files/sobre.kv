# -*- coding: utf-8 -*-

<Label1@Label>:
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
    font_name: str(app.fonts_path['font_txt'])
    font_size: int(app.config_font_size.text)
<About>:

    canvas.before:
        Color:
            rgba: hex(app.config_bg.text)
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:

        GridLayout:
            padding: 10
            cols:1
            spacing: 10
            size_hint: 1, None
            height: self.minimum_height

            Label1:
                text: str(root.text_cabecalho)
            Label1:
                text: str(root.text_funciona)
            Label1:
                text: str(root.text_quiz)
            Label1:
                text: str(root.text_quem)

