
#:import hex kivy.utils.get_color_from_hex
<mainScreen>:
    canvas.before:
        Color:
            rgba: hex(app.config_bg.text)
        Rectangle:
            pos: self.pos
            size: self.size

#    Label:
#        text:'\\n'.join(map(repr, app.detector.symbols))


    Image:
        pos_hint: {'top':1.25, 'center_x':.5}
        source: 'files/app/icons/muzoopan.png'
        size_hint: .75,.7 
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        allow_stretch: True
    Image:
        pos_hint: {'top':.82, 'center_x':.5}
        source: 'files/app/icons/logo.png'
        size_hint: .38,.34
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        allow_stretch: True
    MyButton:
        #on_release: app.detector.start()
        #on_release: app._ScreenFactory('AnimalScreen', animal='jaguatirica')
        on_release: app._ScreenFactory('QuizScreen2')
        size_hint: (.5,.35)
        pos_hint: {'top':.55, 'center_x':.5}
        background_color: [.46,1.39,.87,.8]
        source: 'files/app/icons/cam.png'
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        allow_stretch: True
    MyButton:
        on_release: app._ScreenFactory('About')
        size_hint: (.3,.25)
        pos_hint: {'top':.25, 'center_x':.5}
        background_color: [.46,1.39,.87,.8]
        source: 'files/app/icons/about.png'
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        allow_stretch: True
