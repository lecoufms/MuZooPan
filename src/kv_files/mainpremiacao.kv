# -*- coding: utf-8 -*-
#:import hex kivy.utils.get_color_from_hex

<PremioScrenn>
     
    canvas.before:
        Color:
            rgb: hex('#0088b7')
        Rectangle:
            pos: self.pos
            size: self.size


    FloatLayout: #Selecao comparacao qual premio

        Image:
            source: ('files/app/icons/trofeuprime.png' if root.t_score == 100 else('files/app/icons/ouro.png' if root.t_score  < 100 and root.t_score >= 64.4  else('files/app/icons/prata.png' if root.t_score < 64.4 and root.t_score >= 28.8 else 'files/app/icons/bronze.png')))
            size_hint: 0.37, 0.39
            pos_hint: {'center_x': 0.24, 'top': 0.82}
            allow_stretch: True
    
    FloatLayout: #Fogos de cima direita
        Image:
            source: 'files/app/icons/firework.png'
            size_hint: 0.28, 0.2
            pos_hint: {'center_x': 0.92,'top': 0.95}
            allow_stretch: True

    BoxLayout: #Letra Parabens
        Image:
            source: 'files/app/icons/msg.gif'
            size_hint: 0.16 , 0.16
            pos_hint: {'center_x': 0.9, 'top': 0.99}
            anim_delay: 0.1 
            bold: True
            allow_stretch: True

    FloatLayout: #Fogos de cima esquerda
        Image:
            source: 'files/app/icons/firework.png'
            size_hint: 0.28, 0.2
            pos_hint: {'center_x': 0.2,'top': 0.89}
            allow_stretch: True

    FloatLayout: #Fogos de baixo 3
        Image:
            source: 'files/app/icons/firework.png' 
            size_hint: 0.4, 0.4
            pos_hint: {'center_x': 0.7,'top': 0.4}
            allow_stretch: True

    FloatLayout: #Informações do lado direito superior
        Label:
            pos_hint: {'center_x': 0.96, 'top': .75}
            font_name: 'MontserratBold.ttf'
            font_size: '22sp'
            text: (('Excelente! \nSua pontuação foi \nperfeita! \nVocê acertou ' + root.t_correct + '\nperguntas e fez \n' +  str(root.t_score2) + ' pontos') if root.t_score == 100 else (('Ótimo, \nvocê foi incrivel.  \nVocê acertou ' + str(root.t_correct) + '\nperguntas e fez \n' + str(root.t_score2) + ' pontos') if root.t_score < 100 and root.t_score >= 64.4 else( ('Muito bom! \nVocê ganhou \nmedalha de prata! \nVocê acertou ' + root.t_correct + '\nperguntas e fez ' + str(root.t_score2) + ' pontos') if root.t_score < 64.4 and root.t_score >=28.8 else ('Que legal! \nVocê ganhou \nmedalha de bronze! \nVocê acertou ' + str(root.t_correct) + '\nperguntas e fez \n' + str(root.t_score2) + ' pontos') ) ) )
            haling: 'center'
            markup: True
            

    FloatLayout: #Botao sair do jogo
        Button:
            size_hint: 0.3, 0.05
            pos_hint: {'center_x': 0.5, 'top': 0.06}
            background_color: hex('#0088b7')
            text: '[color=00FF00]SAIR[/color]'
            halign: 'center'
            markup: True
            font_name: 'teste.ttf'
            on_press: app.arquivo_pontuacao()
            on_release: exit()

    FloatLayout:
        Label:
            pos_hint: {'center_x': 0.56, 'top': 0.29}
            font_name: 'MontserratBold.ttf'
            font_size: '25sp'
            text: 'Pontos: ' + root.t_score2
        Label:
            pos_hint: {'center_x': 0.56, 'top': 0.26}
            font_name: 'MontserratBold.ttf'
            font_size: '25sp'
            text: 'Acertos: ' + root.t_correct
        Label:
            pos_hint: {'center_x': 0.56, 'top': 0.23}
            font_name: 'MontserratBold.ttf'
            font_size: '25sp'
            text: 'Bônus: ' + root.t_bonus
        Label:
            pos_hint: {'center_x': 0.56, 'top': 0.2}
            font_name: 'MontserratBold.ttf'
            font_size: '25sp'
            text: 'Revisões: ' + root.t_cons
