#-*-coding: utf-8-*-
#:import hex kivy.utils.get_color_from_hex

<Label>
    font_size: '20dp'
    halign: 'justify'
    font_name: u'MontserratMedium.ttf'

<ToggleButton>:
    background_color: hex('#fffeff') if self.state=='normal' else (156,219,231, 0.6)
    background_normal:''
    size_hint: .79,None
    color: hex('#000000')
    text_size: self.width,None
    height: self.texture_size[1]
    padding: 20,20    
    background_disabled_down: ''
    background_disabled_normal: ''
    disabled_color: 0,0,0,0

<quizScreen>:
    press_state:
    qnt_revisao:0
    bonus:0
    tes: 0 if self.ids.label_acertos.font_size == 15.0 else (self.ids.label_acertos.font_size-15.0)/6*0.1
    canvas.before:
        Color:
            rgb: hex('#0088b7') 
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: label_acertos
        pos_hint:  {'center_x':.55,'top':1}
        size_hint: .9,None
        text: 'ACERTOS' #texto justificaddo ok
        color: hex('#fffeff')
        text_size: self.width,None
        height: self.texture_size[1]
        padding: 25,20
    
    Label:
        id: label_pontos
        pos_hint:  {'center_x':1.18,'top':1}    
        size_hint: .9,None
        text: 'PONTOS' #texto justificaddo ok
        color: hex('#fffeff')
        text_size: self.width,None
        height: self.texture_size[1]
        padding: 25,20

    Label:
        id: label_quantidade_acertos
        pos_hint:  {'center_x':.60,'top':.97}
        size_hint: .9,None
        text: '' #texto justificaddo ok
        color: hex('#fffeff')
        text_size: self.width,None
        height: self.texture_size[1]
        padding: 25,20
    
    Label:
        id: label_quantidade_pontos
        pos_hint:  {'center_x':1.22,'top':.97}    
        size_hint: .9,None
        text: '' #texto justificaddo ok
        color: hex('#fffeff')
        text_size: self.width,None
        height: self.texture_size[1]
        padding: 25,20

    Image:
        id: image_quantidade_acertos
        pos_hint:  {'center_x':0.82,'top':.95}    
        source: 'files/quiz/image/bar_0.png'
        size_hint: 0.17,0.1
        text:''

    Label:
        id:pergunta
        pos_hint:  {'center_x':.56,'center_y':.80}    
        size_hint: .83,None
        canvas.before:
            Color:
                rgb: (255, 255, 255)
            Rectangle:
                size: self.size
                pos: self.pos
        text: '?' #texto justificaddo ok
        color: hex('#000000')
        text_size: self.width,None
        height: self.texture_size[1]
        padding: 20,20
        spacing:100

    BoxLayout:
        id: box_button
        cols:1
        padding: 10
        spacing: 10
        orientation: 'vertical'
        pos_hint: {'center_y': .80,'center_x':.66}
        text:''

        ToggleButton:
            disabled: False
            id: button1
            group: "tess"
            text: 'A)'
            on_press: root.press_state= self
            on_release: root.ids.confirmar.disabled=False

        ToggleButton:
            disabled: False
            id: button2
            group: "tess"
            text: 'B)'
            on_press: root.press_state= self
            on_release: root.ids.confirmar.disabled=False
        
        ToggleButton:
            disabled: False
            id: button3
            group: "tess"
            text: 'C)'
            on_press: root.press_state= self
            on_release: root.ids.confirmar.disabled=False

        ToggleButton:
            disabled: False
            id: button4
            group: "tess"
            text: 'D)'     
            on_press: root.press_state= self
            on_release: root.ids.confirmar.disabled=False

           
    Button:
        pos_hint:  {'center_x':.18,'center_y':.09}    
        size_hint: .2,None
        text: 'REVISAR' #texto justificaddo nope
        halign: 'center'
        background_color:(1,1,1,0)
        background_normal: ''
        background_down: 'img2.jpg'
        border: (2, 2, 2, 2)
        color: hex('#ffff00')
        on_press: root.qnt_revisao += 1
        on_release: root.setrevion()
    
    Button:
        id: confirmar
        pos_hint:  {'center_x':.83,'center_y':.09}    
        size_hint: .19,None
        text: 'CONFIRMAR' #texto justificaddo ok
        background_color:(1,1,1,0)
        background_normal: ''
        background_down: ''
        border: (2, 2, 2, 2)
        color: hex('#737373') if self.disabled==True else hex('#00b300')
        disabled:True
        background_disabled_normal:''
        on_press: root.controler_confirmar() if self.text=='CONFIRMAR' else root.controler_proximo(root.press_state)
        background_disabled_down: ''
        background_disabled_normal: ''
        disabled_color: .3,.3,.3,.5

    
    Label:
        pos_hint:  {'center_x':.5,'center_y':.09}    
        size_hint: .2,None
        text: 'Pergunta' #texto justificaddo ok
        color: hex('#fffeff')
   
    Label:
        id: quantidade_perguntas
        pos_hint:  {'center_x':.51,'center_y':.03}    
        size_hint: .2,None
        text: '' #texto justificaddo ok
        color: hex('#fffeff')
