
#:import hex kivy.utils.get_color_from_hex

<MainScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'files/app/images/bg.jpg'

    FloatLayout:
        Label:
            pos_hint: {'top':1.35, 'center_x':.5}
            Image:
                source: 'files/app/icons/logot.png'
                size: (300,300)
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True

        MyButton:
            on_release: app._ScreenFactory('jaguatirica')
            size_hint: (.5,.35)
            pos_hint: {'top':.65, 'center_x':.5}
            background_color: [.46,1.39,.87,.8]
            source: 'files/app/icons/cam.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True

        MyButton:
            on_release: app._nextScreen()
            size_hint: (.3,.25)
            pos_hint: {'top':.35, 'center_x':.5}
            background_color: [.46,1.39,.87,.8]
            source: 'files/app/icons/about.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
