# -*- coding: utf-8 -*-
#:import hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window

<PremioScrenn>
     
    canvas.before:
        Color:
            rgb: hex(app.config_bg.text)  
        Rectangle:
            pos: self.pos
            size: self.size


    FloatLayout: #Selecao comparacao qual premio

        Image:
            source: ('files/app/icons/trofeuprime2.png' if root.t_score == 100 else('files/app/icons/ouro.png' if root.t_score  < 100 and root.t_score >= 64.4  else('files/app/icons/prata.png' if root.t_score < 64.4 and root.t_score >= 28.8 else 'files/app/icons/bronze.png')))
            size_hint: 0.37, 0.39
            pos_hint: {'center_x': 0.24, 'top': 0.75}
            allow_stretch: True

    FloatLayout: #Fogos de cima direita
        Image:
            source: 'files/app/icons/firework.gif'
            size_hint: 0.28, 0.2
            pos_hint: {'center_x': 0.92,'top': 0.89}
            allow_stretch: True
            anim_delay: 0.09

    FloatLayout: #Correcao frame fogos direita
        Image:
            source: 'files/app/icons/correct1.png'
            size_hint: 0.4, 0.4
            pos_hint: {'center_x': 0.92, 'top': 1.195}
            allow_stretch: True

    FloatLayout: #Fogos de cima esquerda
        Image:
            source: 'files/app/icons/firework.gif'
            size_hint: 0.28, 0.2
            pos_hint: {'center_x': 0.2,'top': 0.88}
            allow_stretch: True
            anim_delay: 0.08

    FloatLayout: #Correcao frame fogos esquerda
        Image:
            source: 'files/app/icons/correct1.png'
            size_hint: 0.4, 0.4
            pos_hint: {'center_x': 0.2, 'top': 1.1748}
            allow_stretch: True

    BoxLayout: #Letra Parabens
        Image:
            source: 'files/app/icons/msg.gif'
            size_hint: 0.16 , 0.16
            pos_hint: {'center_x': 0.9, 'top': 0.99}
            anim_delay: 0.1 
            bold: True
            allow_stretch: True

    FloatLayout: #Fogos de baixo 3
        Image:
            source: 'files/app/icons/firework.gif' 
            size_hint: 0.4, 0.4
            pos_hint: {'center_x': 0.7,'top': 0.45}
            allow_stretch: True
            anim_delay: 0.09

    FloatLayout: #Correcao frame fogos
        Image:
            source: 'files/app/icons/correct1.png'
            size_hint: 0.4, 0.4
            pos_hint: {'center_x': 0.7, 'top': 0.691}
            allow_stretch: True


    FloatLayout: #Informações do lado direito superior
        Label:
            pos_hint: {'center_x': 0.7, 'top': 1.05}
            font_name: str(app.fonts_path['font_txt'])
            font_size: 40
            text: (('Excelente! \nSua pontuação foi \nperfeita! \nVocê acertou ' + root.t_correct + '\nperguntas e fez \n' +  str(root.t_score2) + ' pontos') if root.t_score == 100 and root.t_cons2 == 0 else (('Ótimo! \nVocê foi incrivel.  \nVocê acertou ' + str(root.t_correct) + '\nperguntas e fez \n' + str(root.t_score2) + ' pontos') if root.t_score < 100 and root.t_score >= 64.4 else( ('Muito bom! \nVocê ganhou \nmedalha de prata! \nVocê acertou ' + root.t_correct + '\nperguntas e fez \n' + str(root.t_score2) + ' pontos') if root.t_score < 64.4 and root.t_score >=28.8 else ('Que legal! \nVocê ganhou \nmedalha de bronze! \nVocê acertou ' + str(root.t_correct) + '\nperguntas e fez \n' + str(root.t_score2) + ' pontos') ) ) )
            halign: 'center'
            markup: True
            

    FloatLayout: #Botao sair do jogo
        Button:
            size_hint: .4,None
            pos_hint: {'center_x': 0.5, 'top': 0.06}
            background_color:(0,136,183, 0)
            text: 'SAIR'
            color: hex('#00FF00')
            border: (2, 2, 2, 2)
            text_size: self.width,None
            height: self.texture_size[1]
            halign: 'center'
            font_name: str(app.fonts_path['font_titulo'])
            font_size: root.text_prop
            on_press: app.arquivo_pontuacao()
            on_release: exit()

    FloatLayout:
        Label:
            pos_hint: {'center_x': 0.3, 'top': 0.78}
            font_name: str(app.fonts_path['font_txt'])
            font_size: root.text_prop
            text: 'Pontos: ' + root.t_score2
        Label:
            pos_hint: {'center_x': 0.3, 'top': 0.74}
            font_name: str(app.fonts_path['font_txt'])
            font_size: root.text_prop
            text: 'Acertos: ' + root.t_correct
        Label:
            pos_hint: {'center_x': 0.3, 'top': 0.70}
            font_name: str(app.fonts_path['font_txt'])
            font_size: root.text_prop
            text: 'Bônus: ' + root.t_bonus
        Label:
            pos_hint: {'center_x': 0.3, 'top': 0.66}
            font_name: str(app.fonts_path['font_txt'])
            font_size: root.text_prop
            text: 'Revisões: ' + root.t_cons
