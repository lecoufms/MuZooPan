<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ufms.leco" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://leco.ufms.br/">
    <feature name="AndroidVolume">
        <param name="android-package" value="com.mcluck.plugin.AndroidVolume" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <name>MuZooPan</name>
    <description>
        MuZooPan é um jogo educacional para auxiliar alunos durante o passeio no laboratório de zoologia do Campus do Pantanal (UFMS).
    </description>
    <author email="leco.ufms@gmail.com" href="http://leco.ufms.br/">
        LECO Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon density="mdpi" src="www/assets/icon.png" />
    <icon density="ldpi" src="www/assets/icon.png" />
    <icon density="hdpi" src="www/assets/icon.png" />
    <icon density="xhdpi" src="www/assets/icon.png" />
    <icon density="xxhdpi" src="www/assets/icon.png" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
</widget>
